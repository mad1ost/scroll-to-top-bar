{
  "manifest_version": 2,
  "name": "Scroll to top bar",
  "version": "1.0.0",
  "description": "Add scroll to top bar when hovering over a scrollbar of the page",
  "content_scripts": [
    {
      "js": ["scroll-to-top-bar.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage"
  ]
}
