{
	"manifest_version": 3,
	"name": "Scroll to top bar",
	"version": "2.0.2",
	"description": "Add scroll to top bar when hovering over a scrollbar of the page",
	"icons": {
		"32": "icons/icon-32.png",
		"64": "icons/icon-64.png",
		"128": "icons/icon-128.png"
	},
	"content_scripts": [
		{
			"js": ["scroll-to-top-bar.js"],
			"matches": ["<all_urls>"],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},
	"permissions": [
		"storage"
	]
}
